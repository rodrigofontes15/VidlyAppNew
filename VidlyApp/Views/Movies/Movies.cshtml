@model VidlyApp.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Movies</h2>
@if (@Model.Movies.Count == 0)
{
    <p>no movies</p>
}
else
{
    <ul>
        @foreach (var movies in Model.Movies)
        {
            <li>@movies.Name</li>
        }
    </ul>
}


